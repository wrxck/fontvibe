{
  "name": "fontvibe",
  "version": "0.3.0",
  "description": "Universal dev-tool for font management â€” detect, search, swap, pair, and export fonts with a floating panel and MCP support",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "fontvibe": "dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.js",
      "require": "./dist/react.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup --config tsup.config.cjs",
    "dev": "vite",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "fonts",
    "google-fonts",
    "font-management",
    "dev-tools",
    "mcp",
    "font-pairing"
  ],
  "author": "Matt Hesketh <matt@heskethwebdesign.co.uk>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/heskethwebdesign/fontvibe.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.26.0",
    "prompts": "2.4.2",
    "ws": "8.19.0",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@types/prompts": "2.4.9",
    "@types/react": "19.1.2",
    "@types/ws": "8.18.1",
    "happy-dom": "^20.6.3",
    "playwright": "^1.58.2",
    "tsup": "8.5.1",
    "typescript": "5.7.3",
    "vite": "6.3.5",
    "vitest": "4.0.18"
  },
  "optionalDependencies": {
    "puppeteer-core": "24.4.0"
  },
  "peerDependencies": {
    "react": "19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  }
}
